@page
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookTel - Hotel Reservation</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: white;
        }

        /* Navbar Styling */
        .bg-dark-blue {
            background-color: #06183B !important;
        }

        .navbar-brand {
            font-size: 1.5rem;
        }

        .nav-link {
            color: white !important;
        }

        .nav-link.active, .nav-link:hover {
            color: #ffc107 !important;
        }

        /* Hero Section */
        .hero-section {
            background: url('img/bg.svg') no-repeat center center;
            dibackground-size: cover;
            min-height: 90vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            text-align: center;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            color: white;
        }

        /* Fixed Scrollable Booking Form */
        .booking-form-container {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: #06183B;
            padding: 20px;
            border-top: 3px solid #06183B;
            box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.2);
            max-height: 50vh;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue">
        <div class="container">
            <a class="navbar-brand text-warning" href="Index">BookTel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" href="#">Reservation</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="About">About</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Contact</a></li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-overlay"></div>
        <div class="container hero-content">
            <h1 class="fw-bold mb-4">Find Your Perfect Stay</h1>
            <p class="lead">Book the best rooms at the best prices.</p>
        </div>
    </div>

    <!-- Fixed Scrollable Booking Form -->
    <div class="booking-form-container">
        <div class="container">
            <form>
                <div class="row g-2">
                    <div class="col-md-3">
                        <label class="fw-bold">Check-in Date</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label class="fw-bold">Check-out Date</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="fw-bold">Guests</label>
                        <select class="form-select">
                            <option>1</option>
                            <option>2</option>
                            <option>3+</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="fw-bold">Room Type</label>
                        <select class="form-select">
                            <option>Standard</option>
                            <option>Deluxe</option>
                            <option>Suite</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-warning w-100">Book Now</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


