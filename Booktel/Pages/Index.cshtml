@page
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BookTel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        
        /* Ensure the navbar background is correctly applied */
        .bg-dark-blue {
            background-color: #06183B !important;
        }

        /* Ensure text color is properly applied */
        .text-dark-blue {
            color: #06183B !important;
        }
        /* Full-page Background Image */
        .hero-section {
            background: url('img/bg.svg') no-repeat center center;
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            position: relative;
        }

        /* Optional: If you want the background to stay fixed while scrolling */
        /* Remove this line if you want it to scroll normally */
        .hero-section-fixed {
            background-attachment: fixed;
        }

        /* Dark Overlay for better text visibility */
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        /* Make inputs and selects more readable */
        .form-control, .form-select {
            height: 45px;
            border-radius: 5px;
        }

        /* Improve placeholder visibility */
        ::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

    </style>
</head>
<body class="bg-white text-white">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue">
        <div class="container">
            <a class="navbar-brand fw-bold text-warning" href="#">BookTel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" href="#">Reservation</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">About</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Contact Us</a></li>
                    <li class="nav-item"><a class="btn btn-warning text-dark fw-bold" href="#">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero-section d-flex align-items-center justify-content-center">
        <div class="hero-overlay"></div> <!-- Dark overlay for readability -->
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="p-4 rounded shadow bg-dark-blue text-white">
                        
                        <form>
                            <div class="row g-2 align-items-center">
                                <!-- Check-in Date -->
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <h1 class="fw-bold mb-3">Book Your Room</h1>
                                    </div>
                                </div>
                                <!-- Check-out Date -->
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <!--Check-in-->
                                        <label class="text-white">Check-in Date</label>
                                        <input type="date" class="form-control bg-transparent text-white border-light" >
                                        <!--Check-out-->
                                        <label class="text-white">Check-Out Date</label>
                                        <input type="date" class="form-control bg-transparent text-white border-light" >
                                    </div>
                                </div>
                                <!-- Guests -->
                                <div class="col-md-2">
                                    <select class="form-select bg-transparent text-white border-light">
                                        <option selected class="text-black">Guests</option>
                                        <option class="text-black">1</option>
                                        <option class="text-black">2</option>
                                        <option class="text-black">3+</option>
                                    </select>
                                    <select class="form-select bg-transparent text-white border-light">
                                        <option selected class="text-black">Room Type</option>
                                        <option class="text-black">Standard</option>
                                        <option class="text-black">Deluxe</option>
                                        <option class="text-black">Suite</option>
                                    </select>
                                </div>
                                
                                <!-- Book Now Button -->
                                <div class="col-md-2">
                                    <button class="btn btn-warning w-100 fw-bold">Book Now</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Content Section (So scrolling is visible) -->
    <section class="container py-5">
        <h2 class="text-center text-dark">Explore Our Hotel</h2>
        <p class="text-center text-muted">Discover luxury and comfort with our premium services.</p>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
